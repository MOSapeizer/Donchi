<div class="login-background">
	<div class="icon">
		<%= image_tag 'icon/white_word_aside.png' %>
	</div>
	<%= render 'widgets/close' %>

	<div class="login-form">
		<%= form_for(resource, as: resource_name, url: user_login_path(resource) ) do |f| %>
			<h1>Hello there,</h1>
			<%= f.email_field :email, autofocus: true, placeholder: "Email"%><br />
			<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

			<div class="actions">
				<%= f.submit "LOGIN", class: "login-btn"%>
			</div>
		<% end %>
		<%= link_to	'Sign Up', user_signup_path, class: "login-anchor" %>
		<br/>
		<%= link_to	'Forget Password', '#', class: "login-anchor" %>
		<!-- <%= render "devise/shared/links" %> -->
	</div>
</div>
<div class="container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-2">
      <%= f.label :email %>
    </div>
    <%= f.email_field :email, autofocus: true, class: 'col-md-4'  %>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= f.label :password %>
    </div>
    <%= f.password_field :password, autocomplete: "off", class: 'col-md-4' %>

  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>